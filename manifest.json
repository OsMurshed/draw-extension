{
  "manifest_version": 3,
  "name": "Draw Extension",
  "version": "0.1.0",
  "description": "Draw and annotate on any web page",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "128": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/canvas.js"],
      "css": ["src/content/canvas.css"]
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  }
}
